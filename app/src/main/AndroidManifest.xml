<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.kanti.nesa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon_nesa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_nesa_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NESA"
        android:usesCleartextTraffic="true">
        <activity android:name="ch.kanti.nesa.SubjectSettings"/>
        <activity android:name="ch.kanti.nesa.DetailedBankStatement"
            android:parentActivityName=".MainActivity"/>
        <activity android:name="ch.kanti.nesa.GradeDetailActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name="ch.kanti.nesa.MainActivity" />
        <activity android:name="ch.kanti.nesa.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ch.kanti.nesa.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
    </application>

</manifest>