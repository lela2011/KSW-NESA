<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NESA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorVariant</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/black</item>

        <item name="backgroundColor">@color/backgroundLCD</item>
        <item name="colorSurface">@color/surfaceLCD</item>

        <item name="android:windowBackground">@color/backgroundLCD</item>

        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnBackground">@color/onBackground</item>

        <item name="materialCardViewStyle">@style/CardView.LCD.Dark</item>


    </style>

    <style name="CardView.LCD.Dark" parent="CardView.Dark">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.NESA.OLED" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorVariant</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColorVariant</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/black</item>

        <item name="backgroundColor">@color/backgroundOLED</item>
        <item name="colorSurface">@color/surfaceOLED</item>

        <item name="android:windowBackground">@color/backgroundOLED</item>

        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnBackground">@color/onBackground</item>

        <item name="materialCardViewStyle">@style/CardView.OLED</item>


        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Custom</item>

        <item name="elevation">0dp</item>
    </style>

    <style name="CardView.OLED" parent="CardView.Dark">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">#ababab</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Custom" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>
    
</resources>