<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.kanti.nesa.activities.SplashActivity">

    <ImageView
        android:id="@+id/kantiLogo"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/kantilogo"
        android:contentDescription="@string/kanti_logo" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kantiLogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hintText"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/progressBar"
        android:textColor="@color/primaryColor"
        android:text="@string/hold_on_while_we_get_your_data"/>



</RelativeLayout>